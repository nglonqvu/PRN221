@page
@model Web_PizzaShop.Pages.Common.RegisterModel
@{
    Layout = "_Layout";
}


<!DOCTYPE html>
<html lang="en">
<head>

    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Register Form</title>

    <!-- Font Icon -->
    <link rel="stylesheet" href="~/css/Common/material-design-iconic-font.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">


    <link rel="stylesheet" href="~/css/Common/Style.css">

</head>
<body>

    <div class="container">
        <div class="signup-content">
            <div class="signup-form">
                <h2 class="form-title">Register</h2>
                <form method="POST" class="register-form" id="register-form">
                    <div class="form-group">
                        <label for="user.UserName"><i class="fa-solid fa-user"></i></label>
                        <input type="text" asp-for="user.UserName" placeholder="UserName" />
                    </div>
                    <div class="form-group">
                        <label asp-for="user.Email"><i class="fa-solid fa-envelope"></i></label>
                        <input type="email" asp-for="user.Email" placeholder="Your Email" />
                    </div>
                    <div class="form-group">
                        <label asp-for="user.PasswordHash"><i class="fa-solid fa-lock"></i></label>
                        <input type="password" asp-for="user.PasswordHash" placeholder="Password" />
                    </div>
                   
                    <div class="form-group">
                        <label for="re-pass"><i class="fa-regular fa-lock"></i></label>
                        <input type="password" asp-for="@Model.passwordConfirm" placeholder="Repeat your password" />
                    </div>
                    <div class="form-group">
                        <label asp-for="user.Address"><i class="fa-solid fa-lock"></i></label>
                        <input type="text" asp-for="user.Address" placeholder="Address" />
                    </div>
                    <div class="form-group">
                        <input type="checkbox" name="agree-term" id="agree-term" class="agree-term" />
                        <label for="agree-term" class="label-agree-term"><span><span></span></span>I agree all statements in  <a href="#" class="term-service">Terms of service</a></label>
                    </div>
                    <div class="form-group form-button">
                        <input type="submit" name="signup" id="signup" class="form-submit" value="Register" />
                    </div>
                </form>
                <p style="color: red"> @Model.message </p>
            </div>
            <div class="signup-image">
                <figure><img src="~/images/Login.jpg" alt="sing up image"></figure>
                <a href="#" class="signup-image-link">I am already member</a>
            </div>
        </div>
    </div>

    <script src="~/js/Common/jquery.min.js"></script>
</body>
</html>
